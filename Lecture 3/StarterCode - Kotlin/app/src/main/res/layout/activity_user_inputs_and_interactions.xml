<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".examples.UserInputsAndInteractionsActivity">

    <EditText
        android:id="@+id/et_user_inputs_and_interactions_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type your name"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btn_user_inputs_and_interactions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click me"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_user_inputs_and_interactions_name"
        app:layout_constraintVertical_bias="0.1" />

</androidx.constraintlayout.widget.ConstraintLayout>