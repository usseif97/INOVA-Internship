<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/screen_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/sign_out_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="10dp"
        android:layout_gravity="bottom"
        android:text="@string/signout"
        android:textSize="25sp" />

    <Button
        android:id="@+id/again_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/sign_out_btn"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="10dp"
        android:layout_gravity="bottom"
        android:enabled="false"
        android:text="Play Again"
        android:textSize="25sp" />


    <TextView
        android:id="@+id/code1"
        android:layout_width="0dp"
        android:layout_height="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/code2"
        app:layout_constraintBottom_toBottomOf="@+id/code_edit_text"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintVertical_bias="0.8"
        android:gravity="center"
        android:textSize="45sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@drawable/rect_white"/>

    <TextView
        android:id="@+id/code2"
        android:layout_width="0dp"
        android:layout_height="150dp"
        app:layout_constraintStart_toEndOf="@+id/code1"
        app:layout_constraintEnd_toStartOf="@+id/code3"
        app:layout_constraintBottom_toBottomOf="@+id/code_edit_text"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintVertical_bias="0.8"
        android:gravity="center"
        android:textSize="45sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@drawable/rect_white"/>

    <TextView
        android:id="@+id/code3"
        android:layout_width="0dp"
        android:layout_height="150dp"
        app:layout_constraintStart_toEndOf="@+id/code2"
        app:layout_constraintEnd_toStartOf="@+id/code4"
        app:layout_constraintBottom_toBottomOf="@+id/code_edit_text"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintVertical_bias="0.8"
        android:gravity="center"
        android:textSize="45sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@drawable/rect_white"/>

    <TextView
        android:id="@+id/code4"
        android:layout_width="0dp"
        android:layout_height="150dp"
        app:layout_constraintStart_toEndOf="@+id/code3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/code_edit_text"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintVertical_bias="0.8"
        android:gravity="center"
        android:textSize="45sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@drawable/rect_white"/>

    <EditText
        android:id="@+id/code_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ok_btn"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/rect_white"
        android:hint="@string/enter_the_code"
        android:textColorHint="@android:color/white"
        android:textSize="25sp"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/ok_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/code_edit_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/code_edit_text"
        android:layout_gravity="bottom"
        android:enabled="false"
        android:text="@string/ok"
        android:textSize="25sp" />

</androidx.constraintlayout.widget.ConstraintLayout>