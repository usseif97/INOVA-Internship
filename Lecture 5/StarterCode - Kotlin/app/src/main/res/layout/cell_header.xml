<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_movie_poster"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/poster"
        app:layout_constraintHeight_max="500dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_movie_name"
        style="@style/TitleTextViewStyle"
        android:text="Peaky Bilnders"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toTopOf="@+id/tv_movie_genres"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.97"
        app:layout_constraintWidth_percent="0.9" />

    <TextView
        android:id="@+id/tv_movie_genres"
        style="@style/WhiteTextViewStyle"
        android:layout_width="0dp"
        android:layout_marginBottom="25dp"
        android:text="Violent . Forceful . Period Piece . Drama . 1920s "
        android:textAlignment="center"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toTopOf="@+id/btn_movie_overview_my_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_movie_rate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:textColor="@color/yellow"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_movie_name"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="8.0" />

    <Button
        android:id="@+id/btn_movie_overview_my_list"
        style="@style/WhiteTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="25dp"
        android:background="@android:color/transparent"
        android:text="my list"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="@+id/iv_movie_poster"
        app:layout_constraintEnd_toStartOf="@id/btn_movie_overview_play"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_movie_overview_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rect_white"
        android:minHeight="37dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="play"
        app:layout_constraintBottom_toBottomOf="@+id/btn_movie_overview_my_list"
        app:layout_constraintEnd_toStartOf="@id/btn_movie_overview_info"
        app:layout_constraintStart_toEndOf="@+id/btn_movie_overview_my_list"
        app:layout_constraintTop_toTopOf="@+id/btn_movie_overview_my_list" />

    <Button
        android:id="@+id/btn_movie_overview_info"
        style="@style/WhiteTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:background="@android:color/transparent"
        android:text="info"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="@+id/btn_movie_overview_my_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_movie_overview_play"
        app:layout_constraintTop_toTopOf="@+id/btn_movie_overview_my_list" />

</androidx.constraintlayout.widget.ConstraintLayout>